@model IEnumerable<AlmacenWeb.Models.Producto>

@{
    ViewData["Title"] = "Inventario de Productos";
}

<h1>Inventario de Productos</h1>

<p>
    <a asp-action="Create" class="ingresar-producto" >Ingresar Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoBarra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadDisponible)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoBarra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadDisponible)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PrId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PrId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PrId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
